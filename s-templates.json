{
  "apiRequestTemplate": {
    "application/json": {
      "contentTypeValue": "$input.params().header.get('Content-Type')",
      "queryPath": "$input.params().path",
      "headerParams": "$input.params().header",
      "resourcePath": "$context.resourcePath",
      "stage": "$context.stage",
      "queryParams": "$input.params().querystring",
      "httpMethod": "$context.httpMethod",
      "sourceIp": "$input.params().header.get('X-Forwarded-For')",
      "auth": "$input.params().header.get('Authorization')",
      "UserAgent": "$input.params().header.get('User-Agent')",
      "path": {
        "all": "$input.params().path",
        "id": "$input.params().path.get('id')"
      },
      "query": {
        "all": "$input.params().querystring"
      },
      "body": "$input.json('$')"
    }
  }
}